<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/framelayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <vn.asiantech.newreviewproject.views.HackyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main.background">
    </vn.asiantech.newreviewproject.views.HackyViewPager>

    <vn.asiantech.newreviewproject.views.PagerSlidingTabStrip
        android:id="@+id/tabStrip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabStrip.height"
        android:background="@android:color/white"
        app:pstsIndicatorColor="@android:color/transparent"
        app:pstsIndicatorHeight="0dp"
        app:pstsShouldExpand="true">

    </vn.asiantech.newreviewproject.views.PagerSlidingTabStrip>


</LinearLayout>
